<<set $email={
    messages: [],
    activeIndex: -1,
    activeMessage: function() {
        return this.messages[this.activeIndex];
    },
    addMessage: function(sender, subject, availableInDays) {
        var m={
            sender: null,
            subject: null,
            body: "",
			image: "email_anonimous.jpg",
			imagePack: "Anonymous",
            date: null,
            viewed: false,
            passage: {
                name: null,
                repeat: false
            },
            allowInbox: true,
            delete: false
        };
        m.sender=sender;
        m.subject=subject;
        m.date=$time.day;
        this.messages.unshift(m);
        return m;
    },
    clean: function() {
        for (var i=this.messages.length-1; i gte 0; i--) {
            if (this.messages[i].delete) {
                this.messages.splice(i, 1);
            }
        }
    },
    cleanAll: function() {
        this.messages=[];
    },
    setActiveByIndex: function(index) {
        this.activeIndex=index;
    }
}>>\
